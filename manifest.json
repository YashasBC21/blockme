{
  "manifest_version": 3,
  "name": "blockme",
  "description": "Pomodoro-based website blocker with XP, badges, quotes, puzzles, and group study with Firebase rooms.",
  "version": "3.0.0",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "64": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "popup.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://blockme-5c871-default-rtdb.firebaseio.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "blocked.js",
        "blocked.png",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
